<Window x:Class="BreakReminder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:VM="clr-namespace:BreakReminder.ViewModel"
        xmlns:Controls="clr-namespace:BreakReminder.Controls"
        xmlns:MainView="clr-namespace:BreakReminder"
        Title="MainWindow" Height="350" Width="525">

    <Window.Resources>
        <DataTemplate DataType="{x:Type VM:ApplicationViewModel}" >
            <MainView:MainWindow/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type VM:CountDownViewModel}" >
            <Controls:CountDownControl/>
        </DataTemplate>
    </Window.Resources>
    
</Window>
